
<div class="category-box">
  <ul>
   <% @categories.each do |category| %>
     <li>
       <a class="category-name"><%= link_to category.name, category %></a>
       <dt class="date">Total Recipies: <%= category.recipes.count %></dt>
       <% if logged_in? %>

         <button class="button"><%= button_to "Add Recipe", new_category_recipe_path(category), :method => 'get' %></button>
       <% end  %>
   <%= render partial: "recipe", collection: category.recipes %>
     </li>
  <% end  %>
  </ul>
</div>

<div class="homepage-image-container" >
<img src="http://goodtoknow.media.ipcdigital.co.uk/111/00001652a/9d02_orh412w625/haggis-neeps-and-tatties.jpg" class="main-page-image">
</div>
 

