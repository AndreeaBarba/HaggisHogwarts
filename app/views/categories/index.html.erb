<h3 align="center" class="category-header">Haggis Meal Categories</h3>


<div class="category-box">
  <h3 align="center">Haggis recipes for any time of the day: </h3>
  <ul>
   <% @categories.each do |category| %>
     <li>
       <a class="category-name"><%= link_to category.name, category %></a>
       <dt class="date">Total Recipies: <%= category.recipes.count %></dt>
       <% if logged_in? %>
         <button class="button"><%= link_to "Add Recipe", new_category_recipe_path(category) %></button>
       <% end  %>
   <%= render partial: "recipe", collection: category.recipes %>
     </li>
  <% end  %>
  </ul>
</div>


<!-- any nested route with an id must have the parent object passed in in the path helper method! -->