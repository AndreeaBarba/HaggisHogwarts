

<%= form_for([@category, @recipe], method: 'post') do |f| %>

  <p>
    <%= f.label :name, "Dish Name" %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :prep_time, "Prep time (minutes)" %><br>
    <%= f.text_area :prep_time %>
  </p>
  <br>

  <p>
    <%= f.label :instructions %><br>
    <%= f.text_area :instructions %>
  </p>
  <br>

  <p>
    <%= f.label :difficulty, "Difficulty Level (1-5)" %><br>
    <%= f.text_area :difficulty %>
  </p>
  <br>

  <%= f.fields_for :ingredient do |ingredient_form| %>
    <p>
        Ingredient: <%= ingredient_form.text_field :item %>
    </p>
  <% end %>


  <%= f.fields_for :ingredient do |ingredient_form| %>
    <p>
        Ingredient: <%= ingredient_form.text_field :item1 %>
    </p>
  <% end %>


  <p>
    <%= f.submit %>
  </p>
<% end  %>
